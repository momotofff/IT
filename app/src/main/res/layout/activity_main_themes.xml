<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5C5282A0"
    tools:context=".MainActivityThemes">

    <ImageView
        android:id="@+id/themes_image"
        android:layout_width="621dp"
        android:layout_height="765dp"
        android:alpha="0.2"
        android:background="@drawable/ic_logojhtext"
        android:contentDescription="@string/todo"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,ImageContrastCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <HorizontalScrollView
            android:id="@+id/cap"
            android:layout_width="match_parent"
            android:layout_height="214dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/qa_Button"
                    style="@style/Widget.AppCompat.ImageButton"
                    android:layout_width="250dp"
                    android:layout_height="175dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="#65FFFFFF"
                    android:contentDescription="@string/startText3"
                    android:elevation="10dp"
                    android:onClick="startQa"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_logoqa"
                    tools:ignore="DuplicateSpeakableTextCheck,ImageContrastCheck" />

                <ImageButton
                    android:id="@+id/java_button"
                    style="@style/Widget.AppCompat.ImageButton"
                    android:layout_width="250dp"
                    android:layout_height="175dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="#65FFFFFF"
                    android:contentDescription="@string/startText3"
                    android:elevation="10dp"
                    android:onClick="buttonStartInDeveloping"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_logojava"
                    tools:ignore="DuplicateSpeakableTextCheck,ImageContrastCheck" />

                <ImageButton
                    android:id="@+id/putterns_button"
                    style="@style/Widget.AppCompat.ImageButton"
                    android:layout_width="250dp"
                    android:layout_height="175dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#65FFFFFF"
                    android:contentDescription="@string/startText3"
                    android:elevation="10dp"
                    android:onClick="buttonStartInDeveloping"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_logopatterns"
                    tools:ignore="DuplicateSpeakableTextCheck" />
            </LinearLayout>
        </HorizontalScrollView>

        <ScrollView
            android:id="@+id/scroll_view_push_random"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/push_random"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#154177"
                    android:textSize="34sp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>