<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundlesson"
    tools:context=".MainActivityThemes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="214dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/QA"
                    android:layout_width="270dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetLeft="6dp"
                    android:insetRight="6dp"
                    android:onClick="startQA"
                    android:text="QA"
                    android:textColor="#D1C4E9" />

                <Button
                    android:id="@+id/Java"
                    android:layout_width="270dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetLeft="6dp"
                    android:insetRight="6dp"
                    android:onClick="startJava"
                    android:text="Java" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="270dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetLeft="6dp"
                    android:insetRight="6dp"
                    android:text="Button" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="270dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetLeft="6dp"
                    android:insetRight="6dp"
                    android:text="Button" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="270dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetLeft="6dp"
                    android:insetRight="6dp"
                    android:text="Button" />
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тут текст от том с чего можно начать, всякие вкладочки и все такое"
            android:textAlignment="center"
            android:textColor="#607D8B"
            android:textSize="34sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>